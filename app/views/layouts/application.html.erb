<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class='flash'><%= flash.notice %></p>
    <div id='sidebar'>
      <ul>
          <li><%= link_to "Article", articles_path, class: "sidebar_link" %></li><br />
          <li><%= link_to "Tags", tags_path, class: "sidebar_link"%></li><br />
          <li><%= link_to "Authors", authors_path, class: "sidebar_link"%></li>
      </ul>
      <ul>

    </div>
    <div id='container'>
      <div id='content'>
        <%= yield %>
        <hr>
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.email}" %>
            <%= link_to "(logout)", logout_path %>
          <% else %>
            <%= link_to "(login)", login_path %>
          <% end %>
        </h6>
      </div>
    </div>
  </body>
</html>
