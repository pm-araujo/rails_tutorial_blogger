<ul>
    <li><%= link_to "Article", articles_path, class: "sidebar_link" %></li><br />
    <li><%= link_to "Tags", tags_path, class: "sidebar_link"%></li><br />
    <li><%= link_to "Authors", authors_path, class: "sidebar_link"%></li>
</ul>

<ul id="months">
	<% (1..12).each do |month| %>
		<li>
			<%= link_to Date::MONTHNAMES[month], month_path(month) %>
		</li>
	<% end %>
<hr>
<h4>Most Popular Articles</h4>
<ul>

<% @most_popular_articles.each do |a| %>
    <li>
        <%= link_to a.title, article_path(a) %>
    </li>
<% end %>
</ul>